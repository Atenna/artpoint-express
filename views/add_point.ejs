<% include partials/header.ejs %>
<div class="container">
    <% if (message != '') { %>
    <p class="text-center text-danger"><%= message %></p>
    <% } %>
    <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-3">
                <input type="number" class="form-control" name="id" id="id" placeholder="ID" required>
            </div>
            <div class="form-group col-md-3">
                <input type="text" class="form-control" name="name" id="name" placeholder="Name" required>
            </div>
            <div class="form-group col-md-3">
                <input type="text" class="form-control" name="parking" id="parking" placeholder="Parking" required>
            </div>
            <div class="form-group col-md-3">
                <input type="text" class="form-control" name="children_friendly" id="children_friendly" placeholder="Children Friendly"
                       required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <input type="number" class="form-control" name="wifi" id="wifi" placeholder="Wifi" required>
            </div>
            <div class="form-group col-md-3">
                <input type="number" class="form-control" name="type" id="type" placeholder="Type" required>
            </div>
            <div class="form-group col-md-3">
                <input type="text" class="form-control" name="lat" id="lat" placeholder="Latitude" required>
            </div>
            <div class="form-group col-md-3">
                <input type="text" class="form-control" name="lon" id="lon" placeholder="Longitude" required>
            </div>
        </div>
        <button type="submit" class="btn btn-primary float-right">Add Point</button>
    </form>
</div>
</div>
</body>
</html>


